{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "src",
        "lib": [
            "dom",
            "es2017"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": true,
        "target": "es6",
        "typeRoots": [
            "node"
        ],
        "experimentalDecorators": true,
        "paths": {
            "@/*": ["scripts/*"]
        }
    },
    "include": [
        "src/scripts/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/scripts/**/*.spec.ts"
    ]
}